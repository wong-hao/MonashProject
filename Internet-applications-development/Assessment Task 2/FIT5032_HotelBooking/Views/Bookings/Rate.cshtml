@model FIT5032_HotelBooking.Models.Hotel

@{
    ViewBag.Title = "Rate";
}

<h2>Rate</h2>
@if (@ViewBag.Result != null)
{
<div class="alert alert-danger">@ViewBag.Result</div>}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Booking</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Name)

                    <div>
                        Rate Hotel: @Html.DisplayFor(model => model.Name)
                    </div>

                    @*@Html.LabelFor(model => model.hotel_rating, htmlAttributes: new { @class = "control-label col-md-2" })*@

                    @*<label>*@
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.RatingClass, 1, new { @class = "custom-control-input" })
                        <label class="custom-control-label" for="1">1</label>
                    </div>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.RatingClass, 2, new { @class = "custom-control-input" })
                        <label class="custom-control-label" for="2">2</label>
                    </div>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.RatingClass, 3, new { @class = "custom-control-input" })
                        <label class="custom-control-label" for="3">3</label>
                    </div>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.RatingClass, 4, new { @class = "custom-control-input" })
                        <label class="custom-control-label" for="4">4</label>
                    </div>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(model => model.RatingClass, 5, new { @class = "custom-control-input" })
                        <label class="custom-control-label" for="5">5</label>
                    </div>
                    @*</label>*@
                    @Html.ValidationMessageFor(model => model.RatingClass, "", new { @class = "text-danger" })



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

